generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int             @id @default(autoincrement())
  username     String
  email        String
  passwordHash String
  viewsCount   Int
  unlocked     UnlockedPlace[]
}

model Place {
  id          Int             @id @default(autoincrement())
  name        String
  geoWidth    Float
  geoHeight   Float
  photo       String
  category    String
  description String
  code        String
  unlocked    UnlockedPlace[]
}

model UnlockedPlace {
  userId  Int
  placeId Int
  place   Place @relation(fields: [placeId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@id([userId, placeId])
}
